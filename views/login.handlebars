<div class="card d-flex justify-content-around form-card">
    <div class="card-header justify-content-around d-flex">
        <h2>Login to your account</h2>
    </div>
    <div class="">
        <form id="login-form" class="card-body">
            <div class="d-flex justify-content-center">
                <label for="username-login">Username:</label>
                <input type="text" id="username-login" />
            </div>
            <br/>
            <div class="d-flex justify-content-center">
                <label for="password-login">Password:</label>
                <input type="text" id="password-login" />
            </div>
            <br/>
            <div class="d-flex justify-content-center">
                <div class="d-flex justify-content-center">
                    <button type="submit" id="signup-btn" class="btn">Login</button>
                </div>
                <div class="d-flex justify-content-center">
                    <a class="" type="button" href="/signup">Sign up instead!</a>
                </div>

            </div>
        </form>
    </div>
</div>

<script src="/js/login.js"></script>