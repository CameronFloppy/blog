<div class="posts">
    {{#each posts}}
    <div class="card">
        <div class="card-title">
            <h2>
                <a href="/post/{{id}}">{{title}}</a>
            </h2>
        </div>
        <div class="card-body">
            {{body}}
        </div>
        <div class="card-footer">
            Posted by {{User.username}} on {{format_date created_at}}
        </div>
    </div>
    {{each}}
</div>