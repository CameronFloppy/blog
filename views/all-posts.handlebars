<div class="posts">
    {{#each posts}}
    <div class="card post">
        <div class="card-title">
            <h2 class="post-title">
                <a class="light-text" href="/post/{{id}}">{{title}}</a>
            </h2>
        </div>
        <div class="card-body post-body">
            {{body}}
        </div>
        {{!-- <div class="card-footer">
            Posted by {{User.username}} on {{format_date created_at}}
        </div> --}}
    </div>
    {{/each}}
</div>